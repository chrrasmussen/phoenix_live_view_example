import ErlangPrelude
import PhoenixLiveView

Model : Type
Model = Int

init : IO Model
init = pure 0

update : String -> Model -> IO Model
update "inc" model = pure $ model + 1
update "dec" model = pure $ model - 1

view : Model -> View
view model =
  let assigns = insert (MkErlAtom "val") model empty
  in renderTemplate "Elixir.DemoWeb.BlodwenCounterView" "index.html" assigns


exports : ErlExports
exports =
  exportPhoenixLiveView init update view
